<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" stylesheets="@../styles/main_css.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.avem.resonance.controllers.TestItemEditorController">
   <children>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Редактор объекта испытания" />
               </children>
               <VBox.margin>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" spacing="16.0">
               <children>
                  <Label text="Выберите двигатель" />
                  <ComboBox fx:id="comboBoxTestItem" onAction="#handleComboBoxTestItem" prefWidth="200.0" />
                  <Button mnemonicParsing="false" onAction="#handleAddTestItem" text="Добавить" />
                  <Button mnemonicParsing="false" onAction="#handleDelete" text="Удалить">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <VBox alignment="CENTER">
                     <children>
                        <HBox alignment="CENTER" spacing="64.0">
                           <children>
                              <Label text="Наименование :" />
                              <TextField fx:id="textFieldType" prefWidth="200.0" />
                           </children>
                           <VBox.margin>
                              <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                     <HBox.margin>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="18.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="16.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleSave" text="Сохранить" />
               </children>
               <VBox.margin>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
